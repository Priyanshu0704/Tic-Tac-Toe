<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/black_rectangle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/orange_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="34sp"
            android:text="@string/tic_tac_toe"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/back_arrow"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/more_vert_24"/>


    </RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/orange_rectangle"
        android:columnCount="5"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/line_1_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/cross"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_1_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_1_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_2_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/cross"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_2_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_2_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_3_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_margin="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/cross"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_3_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_margin="6dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>

        <ImageButton
            android:id="@+id/line_3_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_column="3"
            android:layout_margin="6dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/circle"
            android:background="@drawable/grey_rectangle"/>


    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/orange_rectangle"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player_1">


        <TextView
            android:id="@+id/name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Priyanshu"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/cross" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/orange_rectangle"
        android:layout_margin="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Priyanshu"
            android:textSize="26sp" />

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/circle" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>